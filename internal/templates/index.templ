package templates


css HomeTitle() {
    color: #FFFFFF;

    background-color: #4254f5;

    border:2px solid black;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;

    padding: 10px;
    margin: 0 auto;

    text-align: center;
}

templ Index(name string) {
	@Base("Calorific - Home Page") {
		<div class={HomeTitle}>
			<h1>Calorific.</h1>
			<h2>Welcome, {name}!</h2>
		</div>
	}
}